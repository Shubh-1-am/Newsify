<!-- Day and night mode image backgrounds -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <color android:color="#343434" />
            </item>
            <item>
                <bitmap
                    android:src="@drawable/dark_mode"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <color android:color="#F8F8F8" />
            </item>
            <item>
                <bitmap
                    android:src="@drawable/day_mode"
                    android:gravity="center" />
            </item>
        </layer-list>
    </item>
</selector>
